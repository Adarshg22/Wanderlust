<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
    <h3>Listing in Detail</h3>
    </div>

    <div class="card col-6 offset-3 show-card">
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
        <p class="card-text">
            <b><%=listing.title%></b><br>
            <%=listing.description%><br>
            &#x20B9;<%=listing.price.toLocaleString("en-IN")%><br>
            <%=listing.location%><br>
            <%=listing.country%><br>
        </p>
  </div>
    </div>
    
    <div class="btns">
        <form method="get" action="/listing/<%=listing._id%>/edit">
            <button class="btn btn-dark edit-btn2">Edit</button>
        </form>
        <form method="post" action="/listing/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark delete-btn">Delete</button>
        </form>
    </div>
    </div>
</body>